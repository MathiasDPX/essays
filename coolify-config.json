{
  "name": "jekyll-essays",
  "type": "application",
  "buildPack": "static",
  "port": 4000,
  "branch": "main",
  "buildCommand": "./build.sh",
  "startCommand": "./serve.sh",
  "outputDirectory": "_site",
  "environment": {
    "JEKYLL_ENV": "production",
    "NODE_ENV": "production"
  },
  "healthCheck": {
    "path": "/",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "autoDeploy": true,
  "exposePort": true
} 